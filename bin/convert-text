#! /usr/bin/env node
const program = require('commander')
const fs = require('fs')

program
    .version('0.1.0')
    .option('--append-blockquotes', 'Append blockquotes', appendBlockquotes)
    .option('--to-html', 'Covert to html', toHtml)
    .option('--trim', 'Remove space', trim)
    // parseで文字列を解析
    .parse(process.argv)

function appendBlockquotes() {
    const stdin = fs.readFileSync('/dev/stdin', 'utf8')
    let text = stdin

    // 先頭に改行を付加
    text = "\n" + text
    // 改行を指定文字に置換
    text = text.replace(/[\n]/g, "\n> ")
    // 先頭の改行を削除
    text = text.replace(/^.*?\n/, '')
    
    // console.log(stdin.replace(/[\n]/g, "\n> "))
    console.log(text)
}

function toHtml() {
    const stdin = fs.readFileSync('/dev/stdin', 'utf8')
    // 改行brに変換
    let text = stdin.replace(/[\n\r]/g, '<br />\n');
    text = '<p>\n' + text + '\n</p>';

    console.log(text)
}

function trim() {
    const stdin = fs.readFileSync('/dev/stdin', 'utf8')
    let text = stdin.replace(/\s/g, '');

    console.log(text)
}
